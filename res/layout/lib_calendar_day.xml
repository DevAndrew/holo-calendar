<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="@dimen/lib_calendar_day_size"
        android:background="@color/lib_calendar_day_background"
        android:layout_height="@dimen/lib_calendar_day_size"
        android:layout_marginLeft="@dimen/lib_calendar_day_padding_sides"
        android:layout_marginRight="@dimen/lib_calendar_day_padding_sides">

    <TextView
        android:id="@+id/lib_calendar_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lib_calendar_day_textcolor"
        android:textSize="@dimen/lib_calendar_day_textsize"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/lib_calendar_day_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/lib_category_view_padding_startend"
        android:layout_marginRight="@dimen/lib_category_view_padding_startend"
        android:layout_marginBottom="@dimen/lib_category_padding_bottom"
        />


    <!-- Two lines on the left side and bottom to create a shadow -->
    <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#cacaca" />
    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"
            android:background="#d3d3d3" />



</RelativeLayout>